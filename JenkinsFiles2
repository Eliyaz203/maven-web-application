pipeline{

agent any

tools{
maven 'maven3.9.5'
}

stages{
 stage('CheckOutCode'){
 steps{
 sendSlackNotifications('STARTED')
git branch: 'development', credentialsId: '8dd1098d-0dd6-413c-adf5-9b24132fc41c', url: 'https://github.com/devopstraineebigner/maven-web-application.git'
}
}

 stage('Build'){
 steps{
 sh "mvn clean package"
}
}

stage('ExecuteSonarQubeReport'){
steps{
sh "mvn clean sonar:sonar"
}
}

stage('UpLoadArtifactsIntoNexus'){
steps{
sh "mvn clean deploy"
}
}

stage('DeployAppIntoTomcat'){
steps{
sshagent(['b45a748b-ce28-4e10-87e9-35ae57605bea']) {
sh "scp -o  StrictHostKeyChecking=no target/maven-web-application.war ec2-user@172.31.42.148:/opt/apache-tomcat-9.0.86/webapps/"
}
}

}


}
post {
  success {
  sendSlackNotifications( currentBuild.result)
  }
  failure {
  sendSlackNotifications( currentBuild.result)
  }
}

}

def sendSlackNotifications(String buildStatus = 'STARTED') {
  // build status of null means successful
  buildStatus =  buildStatus ?: 'SUCCESSFUL'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    color = 'YELLOW'
    colorCode = '#FFFF00'
  } else if (buildStatus == 'SUCCESSFUL') {
    colorName = 'GREEN'
    colorCode = '#00FF00'
  } else {
    colorName = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary, channel: "sbibank_project")
}

